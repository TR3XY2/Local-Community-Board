<UserControl x:Class="LocalCommunityBoard.WpfUI.Views.EditAnnouncementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Margin="20">
    <StackPanel>
        <TextBlock Text="Редагування оголошення" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <TextBlock Text="Заголовок:"/>
        <TextBox x:Name="TitleTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Текст:"/>
        <TextBox x:Name="BodyTextBox" Margin="0,5,0,10" AcceptsReturn="True" Height="150"/>

        <TextBlock Text="URL зображення:"/>
        <TextBox x:Name="ImageUrlTextBox" Margin="0,5,0,15"/>

        <Button Content="Зберегти зміни" Width="130" HorizontalAlignment="Right" Click="Save_Click"/>
    </StackPanel>
</UserControl>
