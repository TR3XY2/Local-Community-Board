<UserControl x:Class="LocalCommunityBoard.WpfUI.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:domain="clr-namespace:LocalCommunityBoard.Domain.Entities;assembly=LocalCommunityBoard.Domain"
             xmlns:viewModels="clr-namespace:LocalCommunityBoard.WpfUI.ViewModels"
             mc:Ignorable="d"
             Background="#FFF8F8F8">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="White"
                CornerRadius="10"
                Padding="15"
                BorderBrush="#DDD"
                BorderThickness="1"
                Margin="0,0,20,0">

            <StackPanel>
                <TextBlock Text="Filters" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" />
                <TextBlock Text="Location" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" />

                <Grid Margin="0,0,0,8">
                    <TextBox x:Name="CityInput"
                             Height="28"
                             Style="{StaticResource SearchTextBoxStyle}" />
                    <TextBlock Text="City"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"
                               FontStyle="Italic" 
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=CityInput, Converter={StaticResource BoolToVis}}"/>
                </Grid>

                <Grid Margin="0,0,0,8">
                    <TextBox x:Name="DistrictInput"
                             Height="28"
                             Style="{StaticResource SearchTextBoxStyle}" />
                    <TextBlock Text="District"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"
                               FontStyle="Italic"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=DistrictInput, Converter={StaticResource BoolToVis}}"/>
                </Grid>

                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="StreetInput"
                             Height="28"
                             Style="{StaticResource SearchTextBoxStyle}" />
                    <TextBlock Text="Street"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"
                               FontStyle="Italic"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=StreetInput, Converter={StaticResource BoolToVis}}"/>
                </Grid>

                <TextBlock Text="Content Type" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" />
                <CheckBox x:Name="NewCheck" Content="News" Margin="0,0,0,5"/>
                <CheckBox x:Name="EventsCheck" Content="Events" Margin="0,0,0,5"/>
                <CheckBox x:Name="PostsCheck" Content="Posts" Margin="0,0,0,20"/>

                <Button Content="Clear Filters"
                        Width="120"
                        HorizontalAlignment="Left"
                        Margin="0,10,0,0"
                        Click="CleaFilters_Click" />
                <Button Content="Apply Filters"
                        Width="120"
                        HorizontalAlignment="Left"
                        Margin="0,10,0,0"
                        Click="ApplyFilters_Click" />
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ItemsControl x:Name="AnnouncementsList" ItemsSource="{Binding Announcements}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type viewModels:AnnouncementViewModel}">
                            <Border Margin="10"
                                    BorderBrush="#DDD"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Background="White"
                                    Padding="8"
                                    Width="230"
                                    Height="200"
                                    MouseLeftButtonUp="Announcement_Click"
                                    Cursor="Hand">
                                <StackPanel>
                                    <Image Source="{Binding Image}"
                                           Height="120"
                                           Stretch="UniformToFill"
                                           Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Title}"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                    <Button Content="Previous" Width="100" Margin="5" Click="PrevPage_Click"/>
                    <TextBlock x:Name="PageInfoText" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0"/>
                    <Button Content="Next" Width="100" Margin="5" Click="NextPage_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
