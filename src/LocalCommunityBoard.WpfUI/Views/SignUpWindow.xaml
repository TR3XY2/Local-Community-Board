<Window x:Class="LocalCommunityBoard.WpfUI.Views.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameBox" Margin="0,5,0,10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailBox" Margin="0,5,0,10"/>

            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,10"/>

            <Button Content="Sign Up" Width="100" Height="30"
                    HorizontalAlignment="Right" Click="SignUp_Click"/>
        </StackPanel>
    </Grid>
</Window>