<UserControl x:Class="LocalCommunityBoard.WpfUI.Views.CreatePostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="300" MinWidth="520">

    <Grid Margin="16">
        <StackPanel>

            <TextBlock Text="Create New Announcement"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"/>

            <TextBlock Text="Title"/>
            <TextBox x:Name="TitleTextBox" Margin="0,4,0,8"/>

            <TextBlock Text="Body"/>
            <TextBox x:Name="BodyTextBox"
                     Style="{StaticResource MultiLineTextBoxStyle}"
                     Margin="0,4,0,8"/>

            <TextBlock Text="Category"/>
            <ComboBox x:Name="CategoryComboBox"
                      Width="88"
                      SelectionChanged="CategoryComboBox_SelectionChanged" RenderTransformOrigin="0.506,0.476" Height="38" HorizontalAlignment="Left">
                <ComboBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.179"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ComboBox.RenderTransform>
                <ComboBoxItem Content="News"/>
                <ComboBoxItem Content="Events"/>
                <ComboBoxItem Content="Posts" OpacityMask="White" RenderTransformOrigin="0.5,0.5">
                    <ComboBoxItem.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </ComboBoxItem.RenderTransform>
                </ComboBoxItem>
            </ComboBox>

            <TextBlock Text="City"/>
            <TextBox x:Name="CityTextBox" Margin="0,4,0,8"/>

            <TextBlock Text="District (optional)"/>
            <TextBox x:Name="DistrictTextBox" Margin="0,4,0,8"/>

            <TextBlock Text="Street (optional)"/>
            <TextBox x:Name="StreetTextBox" Margin="0,4,0,8"/>

            <TextBlock Text="Image URL"/>
            <TextBox x:Name="ImagesTextBox" Margin="0,4,0,12"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="Publish" Width="100" Click="Publish_Click"/>
                <Button Content="Cancel" Width="80" Margin="8,0,0,0" Click="Cancel_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
