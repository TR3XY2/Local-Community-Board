<UserControl x:Class="LocalCommunityBoard.WpfUI.Views.CreatePostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="300" MinWidth="520">

    <Grid Margin="16">
        <StackPanel>

            <TextBlock Text="Create New Announcement"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"/>

            <!-- Title -->
            <TextBlock Text="Title"/>
            <TextBox x:Name="TitleTextBox"
                     Margin="0,4,0,8"/>

            <!-- Body -->
            <TextBlock Text="Body"/>
            <TextBox x:Name="BodyTextBox"
                     Style="{StaticResource MultiLineTextBoxStyle}"
                     Margin="0,4,0,8"/>

            <!-- Category / Location -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,4,0,8"
                        HorizontalAlignment="Left">

                <StackPanel Margin="0,0,8,0">
                    <TextBlock Text="Category ID"/>
                    <TextBox x:Name="CategoryIdTextBox"
                             Width="120"
                             Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Location ID"/>
                    <TextBox x:Name="LocationIdTextBox"
                             Width="120"
                             Margin="0,4,0,0"/>
                </StackPanel>

            </StackPanel>

            <!-- Images -->
            <TextBlock Text="Image URLs (comma separated, optional)"/>
            <TextBox x:Name="ImagesTextBox"
                     Margin="0,4,0,8"/>

            <!-- Links -->
            <TextBlock Text="Links (comma separated, optional)"/>
            <TextBox x:Name="LinksTextBox"
                     Margin="0,4,0,12"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal">
                <Button Content="Publish" Width="100" Click="Publish_Click"/>
                <Button Content="Cancel" Width="80" Margin="8,0,0,0" Click="Cancel_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
