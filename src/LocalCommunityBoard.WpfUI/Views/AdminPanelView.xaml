<UserControl x:Class="LocalCommunityBoard.WpfUI.Views.AdminPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FFF8F8F8">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Admin Panel"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <DataGrid x:Name="UsersGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Height="350">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding Role.Name}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                    <DataGridTemplateColumn Header="Actions" Width="425">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Content="Block" Margin="3" Width="60" Click="BlockUser_Click">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                <Setter Property="IsEnabled" Value="True"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Active">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Blocked">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="Unblock"
                                            Margin="3"
                                            Width="80"
                                            Click="UnblockUser_Click">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                <Setter Property="IsEnabled" Value="True"/>
                                                <Style.Triggers>
                                                     <DataTrigger Binding="{Binding Status}" Value="Blocked">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Active">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Content="Edit" Margin="3" Width="50" IsEnabled="True" Click="EditUser_Click"/>
                                    <Button Content="Delete" Margin="3" Width="70" Click="DeleteUser_Click">
                                    <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RoleId}" Value="2">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding RoleId}" Value="3">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button x:Name="GiveAdminButton"
                                            Content="Give Admin"
                                            Margin="3"
                                            Width="100"
                                            Click="GiveAdmin_Click">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RoleId}" Value="2">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RoleId}" Value="3">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                <Button x:Name="DemoteAdminButton"
                                            Content="Remove Admin"
                                            Margin="3"
                                            Width="120"
                                            Click="DemoteAdmin_Click">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RoleId}" Value="1">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RoleId}" Value="3">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Reported Announcements -->
            <TextBlock Text="Reported Announcements:"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,10,0,10"/>

            <DataGrid x:Name="ReportedAnnouncementsGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Height="350">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Report ID" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Post ID" Binding="{Binding TargetId}" Width="80"/>
                    <DataGridTextColumn Header="Reporter ID" Binding="{Binding ReporterId}" Width="100"/>
                    <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="150"/>

                    <DataGridTemplateColumn Header="Actions" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Edit" Margin="3" Width="60" Click="EditAnnouncement_Click"/>
                                    <Button Content="Delete" Margin="3" Width="70" Click="DeleteAnnouncement_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            
            <Button x:Name="DemoteAdminButton"
        Content="Remove Admin"
        Margin="3"
        Width="110"
        Click="DemoteAdmin_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <!-- За замовчуванням приховано; покажемо з коду, якщо поточний користувач — SuperAdmin -->
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <!-- Не показувати для користувачів, що НЕ є Admin -->
                            <DataTrigger Binding="{Binding RoleId}" Value="1">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <!-- Не показувати для SuperAdmin (про всяк випадок) -->
                            <DataTrigger Binding="{Binding RoleId}" Value="3">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Reported Comments -->
            <TextBlock Text="Reported Comments:"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Margin="0,10,0,10"/>

            <DataGrid x:Name="ReportedCommentsGrid"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                    HeadersVisibility="Column"
                    Height="350">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Report ID" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Comment ID" Binding="{Binding TargetId}" Width="100"/>
                    <DataGridTextColumn Header="Reporter ID" Binding="{Binding ReporterId}" Width="100"/>
                    <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="150"/>

                    <DataGridTemplateColumn Header="Actions" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Edit" Margin="3" Width="60" Click="EditComment_Click"/>
                                    <Button Content="Delete" Margin="3" Width="70" Click="DeleteComment_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
