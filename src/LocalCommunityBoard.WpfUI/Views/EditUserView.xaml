<UserControl x:Class="LocalCommunityBoard.WpfUI.Views.EditUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FFF8F8F8">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Edit User Information"
                   Grid.Row="0"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"/>

        <!-- Username -->
        <TextBlock Text="Username:"
                   Grid.Row="2"
                   FontWeight="SemiBold"
                   Foreground="#555"/>
        <TextBox Grid.Row="3"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Email -->
        <TextBlock Text="Email:"
                   Grid.Row="5"
                   FontWeight="SemiBold"
                   Foreground="#555"/>
        <TextBox Grid.Row="6"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- New Password -->
        <TextBlock Text="New Password:"
                   Grid.Row="8"
                   FontWeight="SemiBold"
                   Foreground="#555"/>
        <PasswordBox x:Name="NewPasswordBox"
                     Grid.Row="9"
                     PasswordChanged="NewPasswordBox_PasswordChanged"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="14"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <!-- Save -->
            <Button Content="Save Changes"
                    Width="120"
                    Height="38"
                    Margin="0,0,10,0"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Command="{Binding SaveCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#38853c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Cancel -->
            <Button Content="Cancel"
                    Width="100"
                    Height="38"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Command="{Binding CancelCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#F44336"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#c0180c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
