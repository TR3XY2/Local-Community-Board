<UserControl x:Class="LocalCommunityBoard.WpfUI.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30"
                    MaxWidth="500"
                    HorizontalAlignment="Center">

            <!-- Header -->
            <TextBlock Text="My Profile"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,25"/>

            <!-- Username -->
            <TextBlock Text="Username:"
                       FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameBox"
                     Margin="0,5,0,15"
                     Padding="6"/>

            <!-- Email -->
            <TextBlock Text="Email:"
                       FontWeight="SemiBold"/>
            <TextBox x:Name="EmailBox"
                     Margin="0,5,0,25"
                     Padding="6"/>

            <!-- Optional Password Section -->
            <Expander Header="Change Password"
                      Margin="0,0,0,25">
                <StackPanel>
                    <TextBlock Text="Current Password:"/>
                    <PasswordBox x:Name="CurrentPasswordBox"
                                 Margin="0,5,0,10"/>

                    <TextBlock Text="New Password:"/>
                    <PasswordBox x:Name="NewPasswordBox"
                                 Margin="0,5,0,10"/>

                    <TextBlock Text="Confirm New Password:"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 Margin="0,5,0,5"/>
                </StackPanel>
            </Expander>

            <!-- Save -->
            <Button Content="Save Changes"
                    Width="150"
                    HorizontalAlignment="Center"
                    Click="SaveChanges_Click"/>

            <!-- Status -->
            <TextBlock x:Name="StatusText"
                       Margin="0,15,0,0"
                       Foreground="Green"
                       Visibility="Collapsed"
                       Text="Changes saved successfully."/>

            <!-- Divider -->
            <Separator Margin="0,30,0,15"/>

            <!-- My Announcements -->
            <TextBlock Text="My Announcements"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,15"/>

            <ItemsControl x:Name="MyAnnouncementsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="10"
                                Margin="0,0,0,10">
                            <DockPanel LastChildFill="False">
                                <TextBlock Text="{Binding Title}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"
                                           DockPanel.Dock="Left"
                                           Width="260"/>

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            DockPanel.Dock="Right">
                                    <Button Content="Edit"
                                            Width="70"
                                            Margin="0,0,5,0"
                                            Click="EditMyAnnouncement_Click"
                                            Tag="{Binding Id}"/>
                                    <Button Content="Delete"
                                            Width="70"
                                            Margin="0,0,0,0"
                                            Click="DeleteMyAnnouncement_Click"
                                            Tag="{Binding Id}"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <!-- Delete Account -->
            <Separator Margin="0,30,0,15"/>

            <Button Content="Delete My Account"
                    Width="180"
                    HorizontalAlignment="Center"
                    Background="#CC0000"
                    Foreground="White"
                    Padding="6"
                    Click="DeleteAccount_Click"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>
