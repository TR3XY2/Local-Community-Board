<UserControl x:Class="LocalCommunityBoard.WpfUI.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
	<Grid>
		<StackPanel Margin="30" Width="300">
			<TextBlock Text="My Profile" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

			<TextBlock Text="Username:" FontWeight="SemiBold"/>
			<TextBox x:Name="UsernameBox" Margin="0,5,0,15"/>

			<TextBlock Text="Email:" FontWeight="SemiBold"/>
			<TextBox x:Name="EmailBox" Margin="0,5,0,25"/>

			<Button Content="Save Changes"
                    Width="150"
                    HorizontalAlignment="Center"
                    Click="SaveChanges_Click"/>

			<TextBlock x:Name="StatusText"
                       Margin="0,15,0,0"
                       Foreground="Green"
                       Visibility="Collapsed"
                       Text="Changes saved successfully."/>
		</StackPanel>
	</Grid>
</UserControl>
