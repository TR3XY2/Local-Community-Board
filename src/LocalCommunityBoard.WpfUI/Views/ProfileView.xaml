<UserControl x:Class="LocalCommunityBoard.WpfUI.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="30" Width="300">
            <TextBlock Text="My Profile" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <!-- Username -->
            <TextBlock Text="Username:" FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameBox" Margin="0,5,0,15"/>

            <!-- Email -->
            <TextBlock Text="Email:" FontWeight="SemiBold"/>
            <TextBox x:Name="EmailBox" Margin="0,5,0,25"/>

            <!-- Optional Password Section -->
            <Expander Header="Change Password" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Current Password:"/>
                    <PasswordBox x:Name="CurrentPasswordBox" Margin="0,5,0,10"/>

                    <TextBlock Text="New Password:"/>
                    <PasswordBox x:Name="NewPasswordBox" Margin="0,5,0,10"/>

                    <TextBlock Text="Confirm New Password:"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,5,0,5"/>
                </StackPanel>
            </Expander>

            <!-- Save -->
            <Button Content="Save Changes"
                    Width="150"
                    HorizontalAlignment="Center"
                    Click="SaveChanges_Click"/>

            <!-- Status -->
            <TextBlock x:Name="StatusText"
                       Margin="0,15,0,0"
                       Foreground="Green"
                       Visibility="Collapsed"
                       Text="Changes saved successfully."/>
        </StackPanel>
    </Grid>
</UserControl>
