<Window x:Class="LocalCommunityBoard.WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:LocalCommunityBoard.WpfUI.Controls"
        xmlns:views="clr-namespace:LocalCommunityBoard.WpfUI.Views"
        Title="Local Community Board"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F8F8">

    <DockPanel>
        <controls:TopBar x:Name="TopBar"
                         DockPanel.Dock="Top"
                         HomeRequested="TopBar_HomeRequested"
                         ProfileRequested="TopBar_ProfileRequested" />

        <ContentControl x:Name="MainContent" Margin="10" />
    </DockPanel>
</Window>
