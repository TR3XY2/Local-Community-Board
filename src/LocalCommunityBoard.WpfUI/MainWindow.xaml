<Window x:Class="LocalCommunityBoard.WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:LocalCommunityBoard.WpfUI.Controls"
        Title="Local Community Board"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F8F8">

    <DockPanel>
        <controls:TopBar DockPanel.Dock="Top" />

        <Grid Margin="10">
            <TextBlock Text="Welcome to the Local Community Board!"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       Foreground="#333" />
        </Grid>
    </DockPanel>
</Window>
